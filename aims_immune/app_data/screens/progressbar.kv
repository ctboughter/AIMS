Root:
    name: 'ProgressBar'

    Label:
        text: 'Progression: {}%'.format(int(pb.value))
        size_hint_y: None
        height: '48dp'
        pos_hint: {'center_x': 0.5, 'center_y': 0.6}

    ProgressBar:
        id: pb
        size_hint_x: .5
        size_hint_y: None
        height: '48dp'
        value: (app.time * 20) % 100.
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}

    Button:
        size_hint: None, None
        size: '150dp', '48dp'
        text: 'Continue'
        pos_hint: {'center_x': 0.85, 'center_y': 0.1}
        on_release: app.go_next_screen()

    Button:
        size_hint: None, None
        size: '150dp', '48dp'
        text: 'Continue'
        pos_hint: {'center_x': 0.15, 'center_y': 0.1}
        on_release: app.go_previous_screen()

