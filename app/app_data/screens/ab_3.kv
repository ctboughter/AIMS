#:kivy 1.8.0
Analysis:
    name: 'ab_3'
    img1: screen3_img
    alnb: alnb
    alnc: alnc
    alnl: alnl
    alnr: alnr
    next1_3: next1_3

    Image:
        source: 'app_data/butt_up.png'
        size_hint: 0.6, 0.075
        pos_hint: {'center_x': 0.5, 'center_y': 0.95}
        keep_ratio: False
        allow_stretch: True

    Image:
        source: 'app_data/butt_down.png'
        size_hint: 0.75, 0.075
        pos_hint: {'center_x': 0.5, 'center_y': 0.85}
        keep_ratio: False
        allow_stretch: True

    Label:
        font_name: 'app_data/Poppins-Medium.ttf'
        color: 0.341, 0.392, 1, 1
        size_hint: .1, .1
        pos_hint: {'center_x': 0.95, 'center_y': 0.95}
        text:'A I M S'

    Label:
        size_hint_y: None
        pos_hint: {'center_x': 0.5, 'center_y': 0.95}
        height: '32dp'
        text: 'Step3 - Generate Matrix Representation of Sequences'
        font_name: 'app_data/Poppins-Medium.ttf'
        color: 0, 0.033, 0.329, 1

    Label:
        size_hint_y: None
        pos_hint: {'center_x': 0.5, 'center_y': 0.85}
        height: '32dp'
        text: 'Horizontal white lines separate data from files loaded in previous step.'
        font_name: 'app_data/Poppins-Medium.ttf'

    Image:
        id: screen3_img
        size_hint: 0.75, 0.5
        pos_hint: {'center_x': 0.5, 'center_y': 0.55}
        source: 'app_data/white.png'
        keep_ration: True
    #########################################################
    Label:
        size_hint: None , None
        pos_hint: {'center_x': 0.2, 'center_y': 0.25}
        height: '32dp'
        text:'Bulge Align'
        font_name: 'app_data/Poppins-Medium.ttf'
        color: 0.341, 0.392, 1, 1

    CheckBox:
        id: alnb
        size_hint: 0.15, 0.1
        group: 'g111'
        pos_hint: {'center_x': 0.2, 'center_y': 0.2}
        allow_no_selection: False
    
    Label:
        size_hint: None , None
        pos_hint: {'center_x': 0.4, 'center_y': 0.25}
        height: '32dp'
        text:'Center Align'
        font_name: 'app_data/Poppins-Medium.ttf'
        color: 0.341, 0.392, 1, 1

    CheckBox:
        id: alnc
        size_hint: 0.15, 0.1
        state: 'down'
        group: 'g111'
        pos_hint: {'center_x': 0.4, 'center_y': 0.2}
        allow_no_selection: False

    Label:
        size_hint: None , None
        pos_hint: {'center_x': 0.6, 'center_y': 0.25}
        height: '32dp'
        text:'Right Align'
        font_name: 'app_data/Poppins-Medium.ttf'
        color: 0.341, 0.392, 1, 1

    CheckBox:
        id: alnr
        size_hint: 0.15, 0.1
        group: 'g111'
        pos_hint: {'center_x': 0.6, 'center_y': 0.2}
        allow_no_selection: False

    Label:
        size_hint: 0.15, 0.1
        pos_hint: {'center_x': 0.8, 'center_y': 0.25}
        text:'Left Align'
        font_name: 'app_data/Poppins-Medium.ttf'
        color: 0.341, 0.392, 1, 1

    CheckBox:
        id: alnl
        size_hint: 0.15, 0.1
        group: 'g111'
        pos_hint: {'center_x': 0.8, 'center_y': 0.2}
        allow_no_selection: False
    ###################################################
    Button:
        size_hint: 0.15, 0.1
        pos_hint: {'center_x': 0.5, 'center_y': 0.1}
        text: 'Get Matrix'
        background_down: 'app_data/butt_down.png'
        background_normal: 'app_data/butt_up.png'
        color: (0, 0.033, 0.329, 1)
        border: (0, 0, 0, 0)
        on_release:
            root.get_matrix()
            screen3_img.reload()

    Button:
        id: next1_3
        size_hint: 0.15, 0.1
        text: 'Next >'
        background_normal: 'app_data/transparent.png'
        background_down: 'app_data/transparent.png'
        pos_hint: {'center_x': 0.85, 'center_y': 0.1}
        color: (0.341, 0.392, 1, 1)
        background_color: (0.773, 0.784, 0.796, 1)
        disabled: True
        on_release: 
            app.go_next_screen(num = 4)

    Button:
        id: prev1_3
        size_hint: 0.15, 0.1
        text: '< Go Back'
        color: (0.341, 0.392, 1, 1)
        background_normal: 'app_data/transparent.png'
        background_down: 'app_data/transparent.png'
        background_color: (0.773, 0.784, 0.796, 1)
        pos_hint: {'center_x': 0.15, 'center_y': 0.1}
        on_release: 
            app.go_prev_screen(num = 2)